{
  "extends": [
    "prettier",
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "next"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "react", "prettier", "unused-imports"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",
    "linebreak-style": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/dot-notation": "warn",
    "import/prefer-default-export": "warning",
    "react/jsx-props-no-spreading": "warning",
    "react/display-name": "warning",
    "import/no-extraneous-dependencies": "warning",
    "react/function-component-definition": [
      "warning",
      {
        "namedComponents": ["function-declaration", "arrow-function"],
        "unnamedComponents": "arrow-function"
      }
    ],
    "unused-imports/no-unused-imports": "warning",
    "unused-imports/no-unused-vars": [
      "warning",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/prop-types": "warning",
    "react/jsx-key": "warning",
    "react/jsx-no-target-blank": "warning",
    "react/jsx-no-duplicate-props": "warning",
    "@typescript-eslint/explicit-function-return-type": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/consistent-type-assertions": "warn",
    "@typescript-eslint/no-empty-interface": "warn",
    "@typescript-eslint/no-inferrable-types": "warn",
    "@typescript-eslint/no-non-null-assertion": "warn",
    "@typescript-eslint/no-var-requires": "warn",
    "no-console": "warn",
    "no-debugger": "warn",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "no-multi-spaces": "warn",
    "no-multiple-empty-lines": ["warn", { "max": 1 }],
    "no-trailing-spaces": "warn",
    "no-duplicate-imports": "warn",
    "no-useless-catch": "warn",
    "no-useless-return": "warn",
    "eqeqeq": ["warn", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
